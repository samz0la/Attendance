<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:layout_marginLeft="16dp"
  android:layout_marginRight="16dp"
  android:baselineAligned="false"
  android:divider="?android:attr/dividerHorizontal"
  android:orientation="horizontal"
  android:showDividers="middle"
  tools:context=".StudentListActivity">

  <!--
    This layout is a two-pane layout for the Students
    master/detail flow.
    
    -->

  <android.support.v7.widget.RecyclerView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/student_list"
    android:layout_width="@dimen/item_width"
    android:layout_height="match_parent"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:name="edu.cnm.deepdive.attendance.StudentListFragment"
    app:layoutManager="LinearLayoutManager"
    tools:context="edu.cnm.deepdive.attendance.StudentListActivity"
    tools:listitem="@layout/student_list_content"/>

  <FrameLayout
    android:id="@+id/student_detail_container"
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight="3"/>

</LinearLayout>